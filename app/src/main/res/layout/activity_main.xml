<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg_style">

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/cybrime_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/logo"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/logo"
        android:hint="Enter Your Name"
        android:background="@drawable/form_style"
        android:inputType="text"
        android:id="@+id/nameform"
        android:textColor="#000000"
        android:gravity="center"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Enter Your Contact No"
        android:layout_below="@+id/nameform"
        android:background="@drawable/form_style"
        android:inputType="phone"
        android:id="@+id/phoneform"
        android:textColor="#000000"
        android:gravity="center"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Enter Your Email"
        android:layout_below="@+id/phoneform"
        android:background="@drawable/form_style"
        android:inputType="textEmailAddress"
        android:id="@+id/emailform"
        android:textColor="#000000"
        android:gravity="center"
        />

    <Button
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:background="@drawable/button_style"
        android:layout_below="@id/emailform"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Submit Your Data"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="18sp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_waves_file"
        />



</RelativeLayout>